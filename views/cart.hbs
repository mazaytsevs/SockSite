<h1>Корзина</h1>

<div class="cart-container">
  {{#each carts}}
  <div class="card col-3" data-id="{{comb_id}}" name="productCart">

    <div class="card-img">
      <div class="sock-color" style="background-color: {{sock_hex}}"></div>
      <div class="sock-pattern" style="background-image: url('/img/patterns/{{pattern_url}}')"></div>
      <div class="sock-picture" style="background-image: url('/img/pictures/{{pic_url}}')"></div>
      <div class="sock-constructor"></div>
    </div>

    <div class="card-body">
      <input type="checkbox" checked>
      <h5 class="card-title">{{pattern_name}}</h5>
      {{!-- ИЗМЕНЕНИЕ КОЛИЧЕСТВА ТУТ --}}

      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <button type="button" class="btn btn-primary" id="changeQtyPlus">-</button>
        <span class="btn btn-primary" id="qty-{{comb_id}}">{{qty}}</span>
        <button type="button" class="btn btn-primary" id="changeQtyPlus">+</button>
        <button type="button" id="favorite-{{comb_id}}">❤</button>
        </span>
      </div>
      <button class="btn delete-button"type="submit" id="{{comb_id}}">Удалить</button>
    </div>
  </div>
  {{/each}}
</div>

<div class="btn-group">
  <a href="#" class="btn btn-primary">Отправить Заказ</a>
</div>


<script defer src="/js/deleteCart.js"></script>





